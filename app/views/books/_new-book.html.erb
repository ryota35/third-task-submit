<h2>New book</h2>

<%= form_with model: new, local: true do |f| %>
<div class="new-book">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div class="new-book">
   <h4>Opinion</h4>
   <%= f.text_area :body %>
</div>
<div class="new-book">
    <h4>
    <%= f.submit 'Create Book' %>
    </h4>
</div>
<% end %>