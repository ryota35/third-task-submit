<p class="notice"><%= notice %></p>

<div class="container">

  <div class="row">

    <div class="col-md-3">


<%= render 'users/user-info', user: @user %>

<%= render 'books/new-book', new: @new %>
    </div>

    <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>

            <table class="table">
              <thead>
                <tr>

                </tr>
              </thead>

              <tbody>
                  <tr>
                    <td><%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
                    <%= @user.name %>
                    <% end %></td>

                    <td><%= link_to book_path(@book.id) do %>
                    <%= @book.title %>
                    <% end %></td>

                    <td><%= @book.body %></td>
                    <% if @user.id == current_user.id %>
                    <td><%= link_to "Edit", edit_book_path(@book) %></td>
                    <td><%= link_to "Destroy", @book, method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                    <% end %>
                  </tr>
              </tbody>
            </table>
          </div>
    </div>
</div>